<div class="space-y-6">
    <!-- Welcome Header -->
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-slate-800 dark:text-white">
                    Welcome back, <%= user.displayName || user.username %>!
                </h1>
                <p class="text-gray-600 dark:text-gray-400 mt-1">Here's an overview of your fitness journey</p>
            </div>
            <div class="hidden sm:block">
                <% if (user.avatarUrl) { %>
                    <img src="<%= user.avatarUrl %>" alt="Profile" class="w-16 h-16 rounded-full">
                <% } else { %>
                    <div class="w-16 h-16 rounded-full bg-blue-500 flex items-center justify-center text-white text-2xl font-bold">
                        <%= (user.displayName || user.username).charAt(0).toUpperCase() %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Current Weight -->
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Current Weight</p>
                    <p class="text-2xl font-bold text-slate-800 dark:text-white mt-1">
                        <% if (user.currentWeight) { %>
                            <%= user.currentWeight %> <%= user.unitSystem === 'IMPERIAL' ? 'lbs' : 'kg' %>
                        <% } else { %>
                            <span class="text-gray-400 dark:text-gray-500">Not set</span>
                        <% } %>
                    </p>
                </div>
                <div class="p-3 bg-blue-50 dark:bg-blue-900/30 rounded-full">
                    <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Goal Weight -->
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Goal Weight</p>
                    <p class="text-2xl font-bold text-slate-800 dark:text-white mt-1">
                        <% if (user.goalWeight) { %>
                            <%= user.goalWeight %> <%= user.unitSystem === 'IMPERIAL' ? 'lbs' : 'kg' %>
                        <% } else { %>
                            <span class="text-gray-400 dark:text-gray-500">Not set</span>
                        <% } %>
                    </p>
                </div>
                <div class="p-3 bg-green-50 dark:bg-green-900/30 rounded-full">
                    <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Progress -->
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Progress</p>
                    <p class="text-2xl font-bold text-slate-800 dark:text-white mt-1">
                        <% if (user.currentWeight && user.goalWeight) { %>
                            <% const diff = user.currentWeight - user.goalWeight; %>
                            <% if (diff > 0) { %>
                                <%= diff.toFixed(1) %> <%= user.unitSystem === 'IMPERIAL' ? 'lbs' : 'kg' %> to go
                            <% } else if (diff < 0) { %>
                                <span class="text-green-600 dark:text-green-400">Goal reached!</span>
                            <% } else { %>
                                <span class="text-green-600 dark:text-green-400">At goal!</span>
                            <% } %>
                        <% } else { %>
                            <span class="text-gray-400 dark:text-gray-500">Set goals</span>
                        <% } %>
                    </p>
                </div>
                <div class="p-3 bg-purple-50 dark:bg-purple-900/30 rounded-full">
                    <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Target Date -->
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Target Date</p>
                    <p class="text-2xl font-bold text-slate-800 dark:text-white mt-1">
                        <% if (user.targetDate) { %>
                            <%= new Date(user.targetDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                        <% } else { %>
                            <span class="text-gray-400 dark:text-gray-500">Not set</span>
                        <% } %>
                    </p>
                </div>
                <div class="p-3 bg-orange-50 dark:bg-orange-900/30 rounded-full">
                    <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Information -->
        <div class="lg:col-span-2 bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-lg font-semibold text-slate-800 dark:text-white">Profile Information</h2>
                <a href="/settings" class="text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 hover:underline">
                    Edit Profile
                </a>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Username</p>
                    <p class="text-gray-800 dark:text-gray-200 mt-1">@<%= user.username %></p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</p>
                    <p class="text-gray-800 dark:text-gray-200 mt-1"><%= user.email %></p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Unit System</p>
                    <p class="text-gray-800 dark:text-gray-200 mt-1"><%= user.unitSystem === 'IMPERIAL' ? 'Imperial (lbs, ft)' : 'Metric (kg, cm)' %></p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Height</p>
                    <p class="text-gray-800 dark:text-gray-200 mt-1">
                        <% if (user.height) { %>
                            <% if (user.unitSystem === 'IMPERIAL') { %>
                                <%= Math.floor(user.height / 12) %>' <%= user.height % 12 %>"
                            <% } else { %>
                                <%= user.height %> cm
                            <% } %>
                        <% } else { %>
                            <span class="text-gray-400 dark:text-gray-500">Not set</span>
                        <% } %>
                    </p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Activity Level</p>
                    <p class="text-gray-800 dark:text-gray-200 mt-1">
                        <% if (user.activityLevel) { %>
                            <%= user.activityLevel.replace(/_/g, ' ').toLowerCase().replace(/\b\w/g, l => l.toUpperCase()) %>
                        <% } else { %>
                            <span class="text-gray-400 dark:text-gray-500">Not set</span>
                        <% } %>
                    </p>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Member Since</p>
                    <p class="text-gray-800 dark:text-gray-200 mt-1">
                        <%= new Date(user.createdAt).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %>
                    </p>
                </div>
            </div>

            <% if (user.bio) { %>
                <div class="mt-6 pt-6 border-t border-gray-100 dark:border-gray-700">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Bio</p>
                    <p class="text-gray-800 dark:text-gray-200 mt-1"><%= user.bio %></p>
                </div>
            <% } %>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h2 class="text-lg font-semibold text-slate-800 dark:text-white mb-6">Quick Actions</h2>
            
            <div class="space-y-3">
                <a href="/weight/log" class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                    <div class="p-2 bg-blue-50 dark:bg-blue-900/30 rounded-lg">
                        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800 dark:text-gray-200">Log Weight</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Record today's weight</p>
                    </div>
                </a>

                <a href="/progress" class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                    <div class="p-2 bg-green-50 dark:bg-green-900/30 rounded-lg">
                        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800 dark:text-gray-200">View Progress</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">See your weight history</p>
                    </div>
                </a>

                <a href="/teams" class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                    <div class="p-2 bg-purple-50 dark:bg-purple-900/30 rounded-lg">
                        <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800 dark:text-gray-200">My Teams</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Connect with others</p>
                    </div>
                </a>

                <a href="/settings" class="flex items-center gap-3 p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                    <div class="p-2 bg-gray-100 dark:bg-gray-700 rounded-lg">
                        <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800 dark:text-gray-200">Settings</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Manage your account</p>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Account Status -->
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
        <h2 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">Account Status</h2>
        <div class="flex flex-wrap gap-3">
            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium <%= user.emailVerified ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400' %>">
                <% if (user.emailVerified) { %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Email Verified
                <% } else { %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Email Not Verified
                <% } %>
            </span>
            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium <%= user.profilePublic ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' %>">
                <% if (user.profilePublic) { %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Public Profile
                <% } else { %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    Private Profile
                <% } %>
            </span>
            <% if (user.lastLoginAt) { %>
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Last login: <%= new Date(user.lastLoginAt).toLocaleDateString() %>
                </span>
            <% } %>
        </div>
    </div>
</div>
