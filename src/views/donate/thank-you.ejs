<!-- Thank You Page -->
<section class="py-16 bg-white dark:bg-slate-900">
	<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
		<% if (isSuccess) { %>
		<!-- Success State -->
		<div class="w-20 h-20 bg-emerald-100 dark:bg-emerald-900/50 rounded-full flex items-center justify-center mx-auto mb-8">
			<svg class="w-10 h-10 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
			</svg>
		</div>

		<h1 class="text-3xl font-display font-bold text-slate-900 dark:text-white sm:text-4xl">
			<% if (typeof isSubscription !== 'undefined' && isSubscription) { %>
			Thank You for Subscribing!
			<% } else { %>
			Thank You for Your Donation!
			<% } %>
		</h1>

		<p class="mt-4 text-lg text-slate-600 dark:text-slate-300">
			<% if (typeof isSubscription !== 'undefined' && isSubscription) { %>
			Your recurring support helps keep Weight Loss Watch free, open-source, and ad-free for everyone.
			<% } else { %>
			Your generosity helps keep Weight Loss Watch free, open-source, and ad-free for everyone.
			<% } %>
		</p>

		<% if (amount) { %>
		<div class="mt-8 bg-slate-50 dark:bg-slate-800 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
			<p class="text-sm text-slate-500 dark:text-slate-400 mb-2">Donation Amount</p>
			<p class="text-4xl font-bold text-emerald-600 dark:text-emerald-400"><%= amount %></p>
		</div>
		<% } %>

		<% if (transactionId) { %>
		<div class="mt-6 text-sm text-slate-500 dark:text-slate-400">
			<p>Transaction ID: <span class="font-mono text-slate-700 dark:text-slate-300"><%= transactionId %></span></p>
		</div>
		<% } %>

		<div class="mt-10 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-6 border border-blue-100 dark:border-blue-800">
			<h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">What Your Donation Supports</h2>
			<ul class="text-sm text-slate-600 dark:text-slate-300 space-y-2 text-left max-w-md mx-auto">
				<li class="flex items-center gap-2">
					<svg class="w-4 h-4 text-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
					</svg>
					Server hosting and infrastructure
				</li>
				<li class="flex items-center gap-2">
					<svg class="w-4 h-4 text-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
					</svg>
					New feature development
				</li>
				<li class="flex items-center gap-2">
					<svg class="w-4 h-4 text-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
					</svg>
					Keeping the app completely ad-free
				</li>
				<li class="flex items-center gap-2">
					<svg class="w-4 h-4 text-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
					</svg>
					Open-source community support
				</li>
			</ul>
		</div>

		<% } else { %>
		<!-- Pending/Other State -->
		<div class="w-20 h-20 bg-amber-100 dark:bg-amber-900/50 rounded-full flex items-center justify-center mx-auto mb-8">
			<svg class="w-10 h-10 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
			</svg>
		</div>

		<h1 class="text-3xl font-display font-bold text-slate-900 dark:text-white sm:text-4xl">
			Payment Processing
		</h1>

		<p class="mt-4 text-lg text-slate-600 dark:text-slate-300">
			Your donation is being processed. You should receive a confirmation email from PayPal shortly.
		</p>

		<% if (status) { %>
		<div class="mt-6 text-sm text-slate-500 dark:text-slate-400">
			<p>Status: <span class="font-medium text-amber-600 dark:text-amber-400 capitalize"><%= status %></span></p>
		</div>
		<% } %>

		<% if (transactionId) { %>
		<div class="mt-2 text-sm text-slate-500 dark:text-slate-400">
			<p>Transaction ID: <span class="font-mono text-slate-700 dark:text-slate-300"><%= transactionId %></span></p>
		</div>
		<% } %>
		<% } %>

		<!-- Navigation Options -->
		<div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
			<a href="/" class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
				</svg>
				Return Home
			</a>
			<% if (typeof user !== "undefined" && user) { %>
			<a href="/dashboard" class="inline-flex items-center justify-center gap-2 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 text-slate-900 dark:text-white font-semibold px-6 py-3 rounded-lg transition-colors">
				Go to Dashboard
			</a>
			<% } else { %>
			<a href="/register" class="inline-flex items-center justify-center gap-2 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 text-slate-900 dark:text-white font-semibold px-6 py-3 rounded-lg transition-colors">
				Create an Account
			</a>
			<% } %>
		</div>

		<!-- Share Section -->
		<div class="mt-12 pt-8 border-t border-slate-200 dark:border-slate-700">
			<p class="text-sm text-slate-500 dark:text-slate-400 mb-4">Help spread the word about Weight Loss Watch</p>
			<div class="flex items-center justify-center gap-4">
				<a href="https://twitter.com/intent/tweet?text=I just donated to Weight Loss Watch - a free, open-source weight tracking app! Check it out at&url=https://weightloss.watch" target="_blank" rel="noopener noreferrer" class="p-3 rounded-full bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors" title="Share on Twitter/X">
					<svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="currentColor" viewBox="0 0 24 24">
						<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
					</svg>
				</a>
				<a href="https://github.com/andrewthecodertx/weightloss.watch" target="_blank" rel="noopener noreferrer" class="p-3 rounded-full bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors" title="Star on GitHub">
					<svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="currentColor" viewBox="0 0 24 24">
						<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
					</svg>
				</a>
			</div>
		</div>
	</div>
</section>
