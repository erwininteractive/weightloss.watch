<div class="container mx-auto p-6 max-w-7xl">
    <h1 class="text-3xl font-bold mb-6 text-gray-900">Settings</h1>

    <% if (errors && errors.length > 0) { %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6" role="alert">
            <ul class="list-disc list-inside space-y-1">
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <% if (success) { %>
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6" role="alert">
            <%= success %>
        </div>
    <% } %>

    <div class="flex flex-col lg:flex-row gap-6">
        <aside class="w-full lg:w-64">
            <nav class="flex flex-col gap-1 p-4 bg-white shadow-sm rounded-lg border border-gray-200">
                <a href="#preferences" class="py-2.5 px-4 hover:bg-gray-100 rounded-md transition-colors <%= section === 'preferences' ? 'bg-blue-50 text-teal-700 font-medium' : 'text-gray-700' %>">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                        </svg>
                        Preferences
                    </span>
                </a>
                <a href="#security" class="py-2.5 px-4 hover:bg-gray-100 rounded-md transition-colors <%= section === 'security' ? 'bg-blue-50 text-teal-700 font-medium' : 'text-gray-700' %>">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        Security
                    </span>
                </a>
                <a href="#danger" class="py-2.5 px-4 hover:bg-gray-100 rounded-md transition-colors <%= section === 'danger' ? 'bg-red-50 text-red-700 font-medium' : 'text-gray-700' %>">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                        Danger Zone
                    </span>
                </a>
            </nav>
        </aside>

        <main class="flex-1 space-y-6">
            <!-- Preferences Section -->
            <section id="preferences" class="bg-white shadow-sm rounded-lg p-6 border border-gray-200">
                <h2 class="text-2xl font-semibold mb-6 text-gray-900">Preferences</h2>
                <form action="/settings/preferences" method="POST" class="space-y-6">
                    <div>
                        <label for="unitSystem" class="block text-sm font-medium text-gray-700 mb-2">Unit System</label>
                        <select name="unitSystem" id="unitSystem" class="w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 text-gray-900">
                            <% unitSystems.forEach(option => { %>
                                <option value="<%= option.value %>" <%= user.unitSystem === option.value ? 'selected' : '' %>>
                                    <%= option.label %>
                                </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="space-y-3">
                        <div class="flex items-center">
                            <input type="checkbox" name="profilePublic" id="profilePublic" class="w-4 h-4 text-teal-600 bg-gray-100 border-gray-300 rounded focus:ring-teal-500 focus:ring-2" <%= user.profilePublic ? 'checked' : '' %>>
                            <label for="profilePublic" class="ml-3 text-sm font-medium text-gray-700">Make profile public</label>
                        </div>

                        <div class="flex items-center">
                            <input type="checkbox" name="weightVisible" id="weightVisible" class="w-4 h-4 text-teal-600 bg-gray-100 border-gray-300 rounded focus:ring-teal-500 focus:ring-2" <%= user.weightVisible ? 'checked' : '' %>>
                            <label for="weightVisible" class="ml-3 text-sm font-medium text-gray-700">Make weight visible on profile</label>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="px-6 py-2.5 bg-teal-600 hover:bg-teal-700 text-white font-medium rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 transition-colors">
                            Save Preferences
                        </button>
                    </div>
                </form>
            </section>

            <!-- Security Section -->
            <section id="security" class="bg-white shadow-sm rounded-lg p-6 border border-gray-200">
                <h2 class="text-2xl font-semibold mb-6 text-gray-900">Security</h2>
                <form action="/settings/password" method="POST" class="space-y-6">
                    <div>
                        <label for="currentPassword" class="block text-sm font-medium text-gray-700 mb-2">Current Password</label>
                        <input type="password" name="currentPassword" id="currentPassword" class="w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 text-gray-900">
                    </div>
                    <div>
                        <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                        <input type="password" name="newPassword" id="newPassword" class="w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 text-gray-900">
                        <p class="mt-2 text-sm text-gray-500">Must be at least 8 characters with uppercase, lowercase, and numbers.</p>
                    </div>
                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">Confirm New Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500 text-gray-900">
                    </div>
                    <div class="pt-4">
                        <button type="submit" class="px-6 py-2.5 bg-teal-600 hover:bg-teal-700 text-white font-medium rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 transition-colors">
                            Change Password
                        </button>
                    </div>
                </form>
            </section>

            <!-- Danger Zone Section -->
            <section id="danger" class="bg-white shadow-sm rounded-lg p-6 border-2 border-red-200">
                <div class="flex items-start gap-3 mb-6">
                    <svg class="w-6 h-6 text-red-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    <div>
                        <h2 class="text-2xl font-semibold text-red-600">Danger Zone</h2>
                        <p class="mt-1 text-sm text-gray-600">Irreversible and destructive actions</p>
                    </div>
                </div>

                <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                    <h3 class="font-medium text-red-900 mb-2">Delete Account</h3>
                    <p class="text-sm text-red-700 mb-4">Once you delete your account, there is no going back. All your data, including weight entries, teams, and progress photos will be permanently deleted.</p>

                    <form action="/settings/delete-account" method="POST" onsubmit="return confirm('⚠️ WARNING: This will permanently delete your account and ALL your data. This action CANNOT be undone. Are you absolutely sure?');" class="space-y-4">
                        <div>
                            <label for="confirmPasswordDelete" class="block text-sm font-medium text-red-900 mb-2">Confirm with your password</label>
                            <input type="password" name="confirmPassword" id="confirmPasswordDelete" placeholder="Enter your password" class="w-full px-4 py-2.5 bg-white border border-red-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-gray-900" required>
                        </div>
                        <button type="submit" class="px-6 py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                            Delete My Account
                        </button>
                    </form>
                </div>
            </section>
        </main>
    </div>
</div>
