<div class="min-h-screen bg-slate-50">
	<!-- Header -->
	<header class="bg-white border-b border-slate-200">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
			<div class="flex items-center justify-between">
				<div>
					<a href="/teams/<%= team.id %>" class="text-teal-600 hover:underline text-sm mb-2 inline-block">
						‚Üê Back to <%= team.name %>
					</a>
					<h1 class="text-3xl font-bold text-slate-900">Team Challenges</h1>
				</div>
				<% if (['OWNER', 'ADMIN'].includes(userRole)) { %>
					<a href="/teams/<%= team.id %>/challenges/new"
					   class="inline-flex items-center px-4 py-2 bg-teal-600 hover:bg-teal-700 text-white font-medium rounded-lg transition-colors">
						<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
						</svg>
						Create Challenge
					</a>
				<% } %>
			</div>
		</div>
	</header>

	<!-- Main Content -->
	<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<!-- Flash Messages -->
		<% if (success) { %>
			<div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
				<p class="text-green-800"><%= success %></p>
			</div>
		<% } %>
		<% if (error) { %>
			<div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
				<p class="text-red-800"><%= error %></p>
			</div>
		<% } %>

		<!-- Challenge Filters -->
		<div class="mb-6 flex gap-2 overflow-x-auto">
			<button class="px-4 py-2 bg-teal-600 text-white rounded-lg font-medium whitespace-nowrap">All</button>
			<button class="px-4 py-2 bg-slate-200 text-slate-700 rounded-lg font-medium hover:bg-slate-300 transition-colors whitespace-nowrap">Active</button>
			<button class="px-4 py-2 bg-slate-200 text-slate-700 rounded-lg font-medium hover:bg-slate-300 transition-colors whitespace-nowrap">Upcoming</button>
			<button class="px-4 py-2 bg-slate-200 text-slate-700 rounded-lg font-medium hover:bg-slate-300 transition-colors whitespace-nowrap">Completed</button>
		</div>

		<!-- Challenges Grid -->
		<% if (challenges.length === 0) { %>
			<div class="text-center py-12">
				<svg class="w-16 h-16 mx-auto text-slate-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<h3 class="text-xl font-semibold text-slate-900 mb-2">No Challenges Yet</h3>
				<p class="text-slate-600 mb-4">Get started by creating your first team challenge!</p>
				<% if (['OWNER', 'ADMIN'].includes(userRole)) { %>
					<a href="/teams/<%= team.id %>/challenges/new"
					   class="inline-flex items-center px-4 py-2 bg-teal-600 hover:bg-teal-700 text-white font-medium rounded-lg transition-colors">
						Create Challenge
					</a>
				<% } %>
			</div>
		<% } else { %>
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
				<% challenges.forEach(challenge => { %>
					<a href="/challenges/<%= challenge.id %>"
					   class="block bg-white rounded-lg border border-slate-200 hover:border-teal-500 transition-colors overflow-hidden">
						<!-- Status Badge -->
						<div class="p-4 border-b border-slate-200">
							<div class="flex items-center justify-between mb-2">
								<span class="px-3 py-1 text-xs font-semibold rounded-full <% if (challenge.status === 'ACTIVE') { %> bg-green-100 text-green-800 <% } else if (challenge.status === 'UPCOMING') { %> bg-blue-100 text-blue-800 <% } else if (challenge.status === 'COMPLETED') { %> bg-slate-100 text-slate-800 <% } else { %> bg-red-100 text-red-800 <% } %>">
									<%= challenge.status %>
								</span>
								<% if (challenge.isParticipating) { %>
									<span class="text-xs text-teal-600 font-medium">Participating</span>
								<% } %>
							</div>
							<h3 class="text-lg font-semibold text-slate-900"><%= challenge.name %></h3>
						</div>

						<!-- Challenge Details -->
						<div class="p-4">
							<p class="text-sm text-slate-600 mb-4 line-clamp-2"><%= challenge.description %></p>

							<!-- Type Badge -->
							<div class="mb-3">
								<span class="inline-block px-2 py-1 text-xs bg-slate-100 text-slate-700 rounded">
									<% if (challenge.type === 'WEIGHT_LOSS_PERCENTAGE') { %>
										Weight Loss %
									<% } else if (challenge.type === 'TOTAL_WEIGHT_LOSS') { %>
										Total Weight Loss
									<% } else if (challenge.type === 'CONSISTENCY') { %>
										Consistency
									<% } else { %>
										Activity Based
									<% } %>
								</span>
							</div>

							<!-- Dates -->
							<div class="text-xs text-slate-600 space-y-1 mb-3">
								<div class="flex items-center">
									<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
									</svg>
									<span>Start: <%= new Date(challenge.startDate).toLocaleDateString() %></span>
								</div>
								<div class="flex items-center">
									<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
									</svg>
									<span>End: <%= new Date(challenge.endDate).toLocaleDateString() %></span>
								</div>
							</div>

							<!-- Participants Count -->
							<div class="flex items-center justify-between text-sm">
								<div class="flex items-center text-slate-600">
									<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
									</svg>
									<span><%= challenge._count.participants %> participants</span>
								</div>
								<% if (challenge.isParticipating && challenge.userProgress) { %>
									<span class="font-medium text-teal-600">
										<%= challenge.userProgress.progress.toFixed(1) %>
										<% if (challenge.type === 'WEIGHT_LOSS_PERCENTAGE') { %>%<% } else if (challenge.type === 'CONSISTENCY') { %> days<% } else { %> lbs<% } %>
									</span>
								<% } %>
							</div>
						</div>
					</a>
				<% }) %>
			</div>
		<% } %>
	</main>
</div>
