<div class="max-w-3xl mx-auto flex flex-col h-[calc(100vh-12rem)]" x-data="{
    message: '',
    submitting: false,
    async sendMessage() {
        if (!this.message.trim() || this.submitting) return;

        this.submitting = true;

        try {
            const response = await fetch('/messages/<%= conversation.id %>', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({ content: this.message })
            });

            if (response.ok) {
                this.message = '';
                window.location.reload();
            } else {
                const data = await response.json();
                alert(data.errors?.[0]?.msg || 'Failed to send message');
            }
        } catch (error) {
            console.error('Error sending message:', error);
            alert('An error occurred while sending the message');
        }

        this.submitting = false;
    }
}">
    <!-- Header -->
    <div class="bg-white rounded-t-lg shadow-sm border-b border-gray-200 p-4 shrink-0">
        <div class="flex items-center gap-4">
            <a href="/messages" class="text-gray-600 hover:text-gray-900">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>

            <!-- Avatar -->
            <% if (conversation.isGroup) { %>
                <div class="w-10 h-10 rounded-full bg-purple-500 flex items-center justify-center text-white font-bold shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
            <% } else { %>
                <%
                    const otherParticipant = conversation.participants.find(p => p.user && p.user.id !== currentUserId);
                    const avatarUser = otherParticipant && otherParticipant.user ? otherParticipant.user : { username: 'Unknown', avatarUrl: null };
                %>
                <% if (avatarUser.avatarUrl) { %>
                    <img src="<%= avatarUser.avatarUrl %>" alt="<%= avatarUser.username %>" class="w-10 h-10 rounded-full object-cover shrink-0">
                <% } else { %>
                    <div class="w-10 h-10 rounded-full bg-teal-500 flex items-center justify-center text-white font-bold shrink-0">
                        <%= avatarUser.username.charAt(0).toUpperCase() %>
                    </div>
                <% } %>
            <% } %>

            <div class="flex-1 min-w-0">
                <h1 class="font-semibold text-slate-800 truncate"><%= displayName %></h1>
                <% if (conversation.isGroup) { %>
                    <p class="text-sm text-gray-500"><%= conversation.participants.length %> participants</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Messages Area -->
    <div class="flex-1 overflow-y-auto bg-gray-50 p-4 space-y-4" id="messages-container">
        <% if (messages && messages.length > 0) { %>
            <%
                let lastDate = null;
                messages.forEach(function(msg) {
                    const msgDate = new Date(msg.createdAt).toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' });
                    const msgSender = msg.sender || { id: null, username: 'Unknown', avatarUrl: null };
                    const isOwnMessage = msgSender.id === currentUserId;
            %>
                <!-- Date Separator -->
                <% if (lastDate !== msgDate) { %>
                    <div class="flex items-center gap-4 py-2">
                        <div class="flex-1 h-px bg-gray-300"></div>
                        <span class="text-xs text-gray-500 font-medium"><%= msgDate %></span>
                        <div class="flex-1 h-px bg-gray-300"></div>
                    </div>
                    <% lastDate = msgDate; %>
                <% } %>

                <!-- Message -->
                <div class="flex <%= isOwnMessage ? 'justify-end' : 'justify-start' %>">
                    <div class="flex gap-2 max-w-[80%] <%= isOwnMessage ? 'flex-row-reverse' : '' %>">
                        <% if (!isOwnMessage) { %>
                            <% if (msgSender.avatarUrl) { %>
                                <img src="<%= msgSender.avatarUrl %>" alt="<%= msgSender.username %>" class="w-8 h-8 rounded-full object-cover shrink-0 self-end">
                            <% } else { %>
                                <div class="w-8 h-8 rounded-full bg-teal-500 flex items-center justify-center text-white text-sm font-bold shrink-0 self-end">
                                    <%= msgSender.username.charAt(0).toUpperCase() %>
                                </div>
                            <% } %>
                        <% } %>

                        <div class="<%= isOwnMessage ? 'bg-teal-600 text-white' : 'bg-white' %> rounded-2xl px-4 py-2 shadow-sm">
                            <% if (!isOwnMessage && conversation.isGroup) { %>
                                <p class="text-xs font-medium text-teal-600 mb-1"><%= msgSender.username %></p>
                            <% } %>
                            <p class="<%= isOwnMessage ? 'text-white' : 'text-gray-800' %> whitespace-pre-wrap break-words"><%= msg.content %></p>
                            <p class="text-xs mt-1 <%= isOwnMessage ? 'text-teal-200' : 'text-gray-400' %>">
                                <%= new Date(msg.createdAt).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %>
                                <% if (msg.isEdited) { %>
                                    <span class="ml-1">(edited)</span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <!-- Empty State -->
            <div class="flex flex-col items-center justify-center h-full text-center">
                <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <p class="text-gray-500">No messages yet. Say hello!</p>
            </div>
        <% } %>
    </div>

    <!-- Message Input -->
    <div class="bg-white rounded-b-lg shadow-sm border-t border-gray-200 p-4 shrink-0">
        <form @submit.prevent="sendMessage" class="flex gap-3">
            <input
                type="text"
                x-model="message"
                placeholder="Type a message..."
                maxlength="5000"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-full focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                :disabled="submitting"
            >
            <button
                type="submit"
                :disabled="!message.trim() || submitting"
                class="px-4 py-2 bg-teal-600 text-white rounded-full hover:bg-teal-700 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
            </button>
        </form>
    </div>
</div>

<script>
    // Scroll to bottom on load
    document.addEventListener('DOMContentLoaded', function() {
        const container = document.getElementById('messages-container');
        if (container) {
            container.scrollTop = container.scrollHeight;
        }
    });
</script>
