<div class="max-w-md mx-auto space-y-6">
    <!-- Header -->
    <div class="text-center">
        <a href="/teams" class="inline-flex items-center gap-1 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white mb-6">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Teams
        </a>
    </div>

    <% if (error) { %>
        <!-- Error State -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-8 text-center">
            <div class="w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </div>
            <h1 class="text-xl font-bold text-slate-800 dark:text-white mb-2">Unable to Join</h1>
            <p class="text-gray-600 dark:text-gray-400 mb-6"><%= error %></p>
            <a href="/teams" class="inline-flex items-center justify-center px-4 py-2 bg-gray-800 dark:bg-gray-600 text-white rounded-lg hover:bg-gray-900 dark:hover:bg-gray-500 transition-colors">
                Browse Teams
            </a>
        </div>
    <% } else if (team) { %>
        <!-- Join Confirmation -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-8 text-center">
            <div class="mb-6">
                <% if (team.avatarUrl) { %>
                    <img src="<%= team.avatarUrl %>" alt="<%= team.name %>" class="w-20 h-20 rounded-lg object-cover mx-auto">
                <% } else { %>
                    <div class="w-20 h-20 rounded-lg bg-purple-500 flex items-center justify-center text-white text-3xl font-bold mx-auto">
                        <%= team.name.charAt(0).toUpperCase() %>
                    </div>
                <% } %>
            </div>
            
            <h1 class="text-xl font-bold text-slate-800 dark:text-white mb-2">Join <%= team.name %></h1>
            
            <% if (team.description) { %>
                <p class="text-gray-600 dark:text-gray-400 mb-4"><%= team.description %></p>
            <% } %>
            
            <div class="flex items-center justify-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-6">
                <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <%= team._count.members %> members
                </div>
                <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    by @<%= team.owner.username %>
                </div>
            </div>

            <form action="/teams/join/<%= team.inviteCode %>" method="POST" class="space-y-4">
                <button type="submit" class="w-full px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                    Join Team
                </button>
                <a href="/teams" class="block text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
                    Cancel
                </a>
            </form>
        </div>
    <% } %>
</div>
