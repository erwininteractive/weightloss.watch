<div class="space-y-6" x-data="{ showInviteModal: false, inviteCode: '<%= team.inviteCode %>' }">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-start gap-4">
        <a href="/teams" class="inline-flex items-center gap-1 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white sm:hidden">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Teams
        </a>
        <div class="flex items-start gap-4 flex-1">
            <% if (team.avatarUrl) { %>
                <img src="<%= team.avatarUrl %>" alt="<%= team.name %>" class="w-16 h-16 rounded-lg object-cover">
            <% } else { %>
                <div class="w-16 h-16 rounded-lg bg-purple-500 flex items-center justify-center text-white text-2xl font-bold shrink-0">
                    <%= team.name.charAt(0).toUpperCase() %>
                </div>
            <% } %>
            <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2">
                    <h1 class="text-2xl font-bold text-slate-800 dark:text-white truncate"><%= team.name %></h1>
                    <% if (!team.isPublic) { %>
                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 text-xs rounded-full">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            Private
                        </span>
                    <% } %>
                </div>
                <% if (team.description) { %>
                    <p class="text-gray-600 dark:text-gray-400 mt-1"><%= team.description %></p>
                <% } %>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                    <%= team._count.members %> member<%= team._count.members !== 1 ? 's' : '' %>
                    <span class="mx-1">-</span>
                    Created by @<%= team.owner.username %>
                </p>
            </div>
        </div>
        <div class="flex gap-2 shrink-0">
            <a href="/teams" class="hidden sm:inline-flex items-center gap-1 px-3 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back
            </a>
            <% if (isAdmin) { %>
                <a href="/teams/<%= team.id %>/edit" class="inline-flex items-center gap-1 px-3 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Settings
                </a>
            <% } %>
        </div>
    </div>

    <!-- Success/Error Messages -->
    <% if (success) { %>
        <div class="bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-400 px-4 py-3 rounded-lg">
            <%= success %>
        </div>
    <% } %>
    <% if (error) { %>
        <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded-lg">
            <%= error %>
        </div>
    <% } %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Members List -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
                <div class="p-6 border-b border-gray-100 dark:border-gray-700 flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-slate-800 dark:text-white">Members</h2>
                    <span class="text-sm text-gray-500 dark:text-gray-400"><%= team._count.members %>/<%= team.maxMembers %></span>
                </div>
                <div class="divide-y divide-gray-100 dark:divide-gray-700">
                    <% team.members.forEach(function(member) { %>
                        <div class="flex items-center gap-4 p-4" x-data="{ showRoleMenu: false }">
                            <% if (member.user.avatarUrl) { %>
                                <img src="<%= member.user.avatarUrl %>" alt="<%= member.user.username %>" class="w-10 h-10 rounded-full object-cover">
                            <% } else { %>
                                <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold">
                                    <%= (member.user.displayName || member.user.username).charAt(0).toUpperCase() %>
                                </div>
                            <% } %>
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-2">
                                    <span class="font-medium text-gray-900 dark:text-white truncate"><%= member.user.displayName || member.user.username %></span>
                                    <% if (member.role === 'OWNER') { %>
                                        <span class="px-2 py-0.5 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-400 text-xs rounded-full font-medium">Owner</span>
                                    <% } else if (member.role === 'ADMIN') { %>
                                        <span class="px-2 py-0.5 bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-400 text-xs rounded-full font-medium">Admin</span>
                                    <% } else if (member.role === 'MODERATOR') { %>
                                        <span class="px-2 py-0.5 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-400 text-xs rounded-full font-medium">Moderator</span>
                                    <% } %>
                                </div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">@<%= member.user.username %></p>
                            </div>
                            
                            <% if (member.user.weightVisible && member.user.currentWeight) { %>
                                <div class="text-right hidden sm:block">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                                        <%= member.user.currentWeight %> <%= member.user.unitSystem === 'IMPERIAL' ? 'lbs' : 'kg' %>
                                    </p>
                                    <% if (member.user.goalWeight) { %>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">
                                            Goal: <%= member.user.goalWeight %> <%= member.user.unitSystem === 'IMPERIAL' ? 'lbs' : 'kg' %>
                                        </p>
                                    <% } %>
                                </div>
                            <% } %>

                            <% if (isAdmin && member.userId !== user.id && member.role !== 'OWNER') { %>
                                <div class="relative" @click.away="showRoleMenu = false">
                                    <button @click="showRoleMenu = !showRoleMenu" class="p-2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                                        </svg>
                                    </button>
                                    <div x-show="showRoleMenu" x-transition class="absolute right-0 mt-1 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-10">
                                        <% roleOptions.forEach(function(option) { %>
                                            <button 
                                                @click="
                                                    fetch('/teams/<%= team.id %>/members/<%= member.id %>/role', {
                                                        method: 'POST',
                                                        headers: { 'Content-Type': 'application/json' },
                                                        body: JSON.stringify({ role: '<%= option.value %>' })
                                                    }).then(() => location.reload());
                                                    showRoleMenu = false;
                                                "
                                                class="w-full text-left px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700 <%= member.role === option.value ? 'text-blue-600 dark:text-blue-400 font-medium' : 'text-gray-700 dark:text-gray-300' %>"
                                            >
                                                <%= option.label %>
                                                <% if (member.role === option.value) { %>
                                                    <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                    </svg>
                                                <% } %>
                                            </button>
                                        <% }); %>
                                        <div class="border-t border-gray-100 dark:border-gray-700 my-1"></div>
                                        <form action="/teams/<%= team.id %>/members/<%= member.id %>/remove" method="POST">
                                            <button type="submit" class="w-full text-left px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/30">
                                                Remove from team
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Quick Actions for Members -->
            <% if (isMember) { %>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 space-y-4">
                    <h3 class="font-semibold text-slate-800 dark:text-white">Actions</h3>
                    
                    <% if (isAdmin) { %>
                        <button 
                            @click="showInviteModal = true"
                            class="w-full flex items-center gap-3 p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors text-left"
                        >
                            <div class="p-2 bg-blue-50 dark:bg-blue-900/30 rounded-lg">
                                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium text-gray-800 dark:text-gray-200">Invite Members</p>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Share invite link</p>
                            </div>
                        </button>
                    <% } %>

                    <% if (!isOwner) { %>
                        <form action="/teams/<%= team.id %>/leave" method="POST" onsubmit="return confirm('Are you sure you want to leave this team?')">
                            <button type="submit" class="w-full flex items-center gap-3 p-3 rounded-lg border border-red-200 dark:border-red-800 hover:bg-red-50 dark:hover:bg-red-900/30 transition-colors text-left">
                                <div class="p-2 bg-red-50 dark:bg-red-900/30 rounded-lg">
                                    <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="font-medium text-red-700 dark:text-red-400">Leave Team</p>
                                    <p class="text-sm text-red-500 dark:text-red-500">Remove yourself</p>
                                </div>
                            </button>
                        </form>
                    <% } %>

                    <% if (isOwner) { %>
                        <form action="/teams/<%= team.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this team? This action cannot be undone.')">
                            <button type="submit" class="w-full flex items-center gap-3 p-3 rounded-lg border border-red-200 dark:border-red-800 hover:bg-red-50 dark:hover:bg-red-900/30 transition-colors text-left">
                                <div class="p-2 bg-red-50 dark:bg-red-900/30 rounded-lg">
                                    <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="font-medium text-red-700 dark:text-red-400">Delete Team</p>
                                    <p class="text-sm text-red-500 dark:text-red-500">Permanently remove</p>
                                </div>
                            </button>
                        </form>
                    <% } %>
                </div>
            <% } else { %>
                <!-- Join button for non-members viewing public team -->
                <% if (team.isPublic) { %>
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                        <h3 class="font-semibold text-slate-800 dark:text-white mb-4">Join This Team</h3>
                        <form action="/teams/<%= team.id %>/join" method="POST">
                            <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                                Join Team
                            </button>
                        </form>
                    </div>
                <% } %>
            <% } %>

            <!-- Team Stats -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                <h3 class="font-semibold text-slate-800 dark:text-white mb-4">Team Stats</h3>
                <dl class="space-y-3">
                    <div class="flex justify-between">
                        <dt class="text-gray-500 dark:text-gray-400">Members</dt>
                        <dd class="font-medium text-gray-900 dark:text-white"><%= team._count.members %>/<%= team.maxMembers %></dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="text-gray-500 dark:text-gray-400">Challenges</dt>
                        <dd class="font-medium text-gray-900 dark:text-white"><%= team._count.challenges %></dd>
                    </div>
                    <div class="flex justify-between">
                        <dt class="text-gray-500 dark:text-gray-400">Created</dt>
                        <dd class="font-medium text-gray-900 dark:text-white"><%= new Date(team.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    <!-- Invite Modal -->
    <div x-show="showInviteModal" x-transition class="fixed inset-0 z-50 flex items-center justify-center p-4" style="display: none;">
        <div class="fixed inset-0 bg-black/50" @click="showInviteModal = false"></div>
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-slate-800 dark:text-white">Invite Members</h3>
                <button @click="showInviteModal = false" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Share this link to invite people to join your team:</p>
            <div class="flex gap-2 mb-4">
                <input 
                    type="text" 
                    readonly
                    :value="window.location.origin + '/teams/join/' + inviteCode"
                    class="flex-1 px-3 py-2 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-sm text-gray-900 dark:text-white"
                >
                <button 
                    @click="navigator.clipboard.writeText(window.location.origin + '/teams/join/' + inviteCode); $el.textContent = 'Copied!'; setTimeout(() => $el.textContent = 'Copy', 2000)"
                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium"
                >
                    Copy
                </button>
            </div>
            <% if (isAdmin) { %>
                <button 
                    @click="
                        fetch('/teams/<%= team.id %>/regenerate-invite', { method: 'POST' })
                            .then(r => r.json())
                            .then(data => { if(data.inviteCode) inviteCode = data.inviteCode });
                    "
                    class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300"
                >
                    Regenerate invite link
                </button>
            <% } %>
        </div>
    </div>
</div>
