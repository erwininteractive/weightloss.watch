<div class="min-h-[80vh] flex items-center justify-center py-8">
	<div class="w-full max-w-md">
		<!-- Logo/Brand -->
		<div class="text-center mb-8">
			<h1 class="text-3xl font-bold text-slate-800 dark:text-white">Create Account</h1>
			<p class="text-gray-600 dark:text-slate-300 mt-2">Start your fitness journey today</p>
		</div>

		<!-- Register Card -->
		<div class="bg-white dark:bg-slate-800 p-8 rounded-lg shadow border border-slate-200 dark:border-slate-700">
			<!-- Error Messages -->
			<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
				<div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded mb-6">
					<div class="flex items-start gap-2">
						<svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						<div>
							<p class="font-medium">Please fix the following errors:</p>
							<ul class="mt-1 list-disc list-inside text-sm">
								<% errors.forEach(error => { %>
									<li><%= error.msg %></li>
								<% }) %>
							</ul>
						</div>
					</div>
				</div>
			<% } %>

			<form method="POST" action="/register" class="space-y-5">
				<!-- Display Name Field -->
				<div>
					<label for="displayName" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Display Name
					</label>
					<input 
						type="text" 
						id="displayName" 
						name="displayName" 
						autocomplete="name"
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
						placeholder-gray-500 dark:placeholder-slate-400" placeholder="John Doe"
						value="<%= typeof formData !== 'undefined' ? formData.displayName || '' : '' %>"
					>
				</div>

				<!-- Username Field -->
				<div>
					<label for="username" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Username <span class="text-red-500">*</span>
					</label>
					<input 
						type="text" 
						id="username" 
						name="username" 
						required
						autocomplete="username"
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
						placeholder-gray-500 dark:placeholder-slate-400" placeholder="johndoe"
						value="<%= typeof formData !== 'undefined' ? formData.username || '' : '' %>"
					>
					<p class="mt-1 text-xs text-gray-500">3-30 characters, letters, numbers, and underscores only</p>
				</div>

				<!-- Email Field -->
				<div>
					<label for="email" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Email Address <span class="text-red-500">*</span>
					</label>
					<input 
						type="email" 
						id="email" 
						name="email" 
						required
						autocomplete="email"
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
						placeholder-gray-500 dark:placeholder-slate-400" placeholder="you@example.com"
						value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>"
					>
				</div>

				<!-- Password Field -->
				<div>
					<label for="password" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Password <span class="text-red-500">*</span>
					</label>
					<input 
						type="password" 
						id="password" 
						name="password" 
						required
						autocomplete="new-password"
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
						placeholder-gray-500 dark:placeholder-slate-400" placeholder="Create a strong password"
					>
					<p class="mt-1 text-xs text-gray-500">Min 8 characters with uppercase, lowercase, and number</p>
				</div>

				<!-- Unit System Dropdown -->
				<div>
					<label for="unitSystem" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Unit System <span class="text-red-500">*</span>
					</label>
					<select 
						id="unitSystem" 
						name="unitSystem" 
						required
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 dark:border-slate-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
					>
						<option value="IMPERIAL" <%= typeof formData !== 'undefined' && formData.unitSystem === 'IMPERIAL' ? 'selected' : '' %>>Imperial (lbs, ft/in)</option>
						<option value="METRIC" <%= typeof formData !== 'undefined' && formData.unitSystem === 'METRIC' ? 'selected' : '' %>>Metric (kg, cm)</option>
					</select>
				</div>

				<!-- Height Field -->
				<div>
					<label for="height" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Height <span class="text-red-500">*</span>
					</label>
					<input 
						type="number" 
						id="height" 
						name="height" 
						required
						step="0.1"
						min="1"
						max="300"
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
						placeholder-gray-500 dark:placeholder-slate-400" placeholder="Height"
						value="<%= typeof formData !== 'undefined' ? formData.height || '' : '' %>"
					>
					<p class="mt-1 text-xs text-gray-500">In inches (Imperial) or centimeters (Metric)</p>
				</div>

				<!-- Current Weight Field -->
				<div>
					<label for="currentWeight" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Current Weight <span class="text-red-500">*</span>
					</label>
					<input 
						type="number" 
						id="currentWeight" 
						name="currentWeight" 
						required
						step="0.1"
						min="0.1"
						max="1000"
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
						placeholder-gray-500 dark:placeholder-slate-400" placeholder="Current weight"
						value="<%= typeof formData !== 'undefined' ? formData.currentWeight || '' : '' %>"
					>
					<p class="mt-1 text-xs text-gray-500">In pounds (Imperial) or kilograms (Metric)</p>
				</div>

				<!-- Goal Weight Field (Optional) -->
				<div>
					<label for="goalWeight" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Goal Weight <span class="text-gray-400 text-xs">(optional)</span>
					</label>
					<input 
						type="number" 
						id="goalWeight" 
						name="goalWeight" 
						step="0.1"
						min="0.1"
						max="1000"
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
						placeholder-gray-500 dark:placeholder-slate-400" placeholder="Goal weight (can fill in later)"
						value="<%= typeof formData !== 'undefined' ? formData.goalWeight || '' : '' %>"
					>
					<p class="mt-1 text-xs text-gray-500">In pounds (Imperial) or kilograms (Metric)</p>
				</div>

				<!-- Activity Level Dropdown -->
				<div>
					<label for="activityLevel" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
						Activity Level <span class="text-red-500">*</span>
					</label>
					<select 
						id="activityLevel" 
						name="activityLevel" 
						required
						class="w-full px-4 py-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-white border border-gray-300 dark:border-slate-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-shadow"
					>
						<option value="" disabled <%= typeof formData === 'undefined' || !formData.activityLevel ? 'selected' : '' %>>Select your activity level</option>
						<option value="SEDENTARY" <%= typeof formData !== 'undefined' && formData.activityLevel === 'SEDENTARY' ? 'selected' : '' %>>Sedentary (little or no exercise)</option>
						<option value="LIGHTLY_ACTIVE" <%= typeof formData !== 'undefined' && formData.activityLevel === 'LIGHTLY_ACTIVE' ? 'selected' : '' %>>Lightly Active (light exercise 1-3 days/week)</option>
						<option value="MODERATELY_ACTIVE" <%= typeof formData !== 'undefined' && formData.activityLevel === 'MODERATELY_ACTIVE' ? 'selected' : '' %>>Moderately Active (moderate exercise 3-5 days/week)</option>
						<option value="VERY_ACTIVE" <%= typeof formData !== 'undefined' && formData.activityLevel === 'VERY_ACTIVE' ? 'selected' : '' %>>Very Active (hard exercise 6-7 days/week)</option>
						<option value="EXTREMELY_ACTIVE" <%= typeof formData !== 'undefined' && formData.activityLevel === 'EXTREMELY_ACTIVE' ? 'selected' : '' %>>Extremely Active (very hard exercise, physical job)</option>
					</select>
				</div>

				<!-- Terms Checkbox -->
				<div class="flex items-start">
					<input 
						type="checkbox" 
						id="terms" 
						name="terms" 
						required
						class="w-4 h-4 mt-0.5 text-blue-500 border-gray-300 rounded focus:ring-blue-500"
					>
					<label for="terms" class="ml-2 text-sm text-gray-600 dark:text-slate-300">
						I agree to the 
						<a href="/terms" class="text-blue-600 hover:underline">Terms of Service</a> 
						and 
						<a href="/privacy" class="text-blue-600 hover:underline">Privacy Policy</a>
					</label>
				</div>

				<!-- Submit Button -->
				<button 
					type="submit" 
					class="w-full px-4 py-3 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
				>
					Create Account
				</button>
			</form>

			<!-- Divider -->
			<div class="relative my-6">
				<div class="absolute inset-0 flex items-center">
					<div class="w-full border-t border-gray-200"></div>
				</div>
				<div class="relative flex justify-center text-sm">
					<span class="px-4 bg-white text-gray-500">Already have an account?</span>
				</div>
			</div>

			<!-- Login Link -->
			<a 
				href="/login" 
				class="block w-full px-4 py-3 text-center border border-gray-300 text-gray-700 dark:text-slate-300 font-medium rounded-lg hover:bg-gray-50 transition-colors"
			>
				Sign In
			</a>
		</div>
	</div>
</div>
