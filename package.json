{
	"name": "weightogether",
	"version": "1.0.0",
	"description": "WeighTogether - Track your weight loss journey together with team accountability",
	"main": "dist/server.js",
	"scripts": {
		"dev": "npm run css:watch & nodemon --watch src --ext ts --exec ts-node src/server.ts",
		"dev:server": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
		"css:build": "vite build",
		"css:watch": "vite build --watch",
		"build": "npm run css:build && npx prisma generate && tsc && mkdir -p dist/views && cp -r src/views/* dist/views/",
		"start": "node dist/server.js",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:unit": "jest tests/unit",
		"test:integration": "jest tests/integration",
		"test:ci": "jest --ci --coverage --maxWorkers=1",
		"db:start": "docker compose up -d",
		"db:stop": "docker compose down",
		"db:logs": "docker compose logs -f db",
		"db:migrate": "npx prisma migrate dev",
		"db:push": "npx prisma db push",
		"db:studio": "npx prisma studio",
		"db:generate": "npx prisma generate",
		"db:seed": "npx ts-node prisma/seed.ts",
		"create-admin": "npx ts-node scripts/create-admin.ts"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	},
	"keywords": [
		"typescript",
		"mvc",
		"express",
		"node"
	],
	"author": "Andrew S Erwin",
	"license": "MIT",
	"dependencies": {
		"@prisma/adapter-pg": "^7.1.0",
		"@prisma/client": "^7.1.0",
		"@tailwindcss/vite": "^4.1.17",
		"bcrypt": "^6.0.0",
		"cookie-parser": "^1.4.7",
		"dotenv": "^16.3.1",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-ejs-layouts": "^2.5.1",
		"express-validator": "^7.0.1",
		"jsonwebtoken": "^9.0.3",
		"multer": "^2.0.2",
		"nodemailer": "^7.0.11",
		"pg": "^8.16.3",
		"prisma": "^7.1.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/cookie-parser": "^1.4.10",
		"@types/ejs": "^3.1.5",
		"@types/express": "^4.17.21",
		"@types/express-ejs-layouts": "^2.5.4",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^20.10.5",
		"@types/nodemailer": "^7.0.4",
		"@types/pg": "^8.15.6",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"jest": "^30.2.0",
		"nodemon": "^3.0.2",
		"prettier": "^3.1.1",
		"supertest": "^7.1.4",
		"tailwindcss": "^4.1.17",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"vite": "^7.2.6"
	}
}
